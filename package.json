{
	"name": "coolify",
	"description": "An open-source, hassle-free, self-hostable Heroku & Netlify alternative.",
	"version": "2.0.0-rc.1",
	"license": "AGPL-3.0",
	"scripts": {
		"dev": "docker-compose -f docker-compose-dev.yaml up -d && NODE_ENV=development svelte-kit dev --host 0.0.0.0",
		"dev:stop": "docker-compose -f docker-compose-dev.yaml down",
		"dev:logs": "docker-compose -f docker-compose-dev.yaml logs -f --tail 10",
		"studio": "npx prisma studio",
		"start": "npx prisma migrate deploy && npx prisma generate && npx prisma db seed && node index.js",
		"build": "svelte-kit build",
		"preview": "svelte-kit preview",
		"check": "svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --ignore-path .gitignore --check --plugin-search-dir=. . && eslint --ignore-path .gitignore .",
		"format": "prettier --ignore-path .gitignore --write --plugin-search-dir=. .",
		"db:generate": "prisma generate",
		"db:push": "prisma db push && prisma generate",
		"db:seed":"prisma db seed",
		"release:coolify": "docker build -t coollabsio/coolify:2.0.0-rc.1 . && docker push coollabsio/coolify:2.0.0-rc.1",
		"release:haproxy": "docker build -f haproxy.Dockerfile -t coollabsio/haproxy-alpine:1.0.0-rc.1 . && docker push coollabsio/haproxy-alpine:1.0.0-rc.1"
	},
	"devDependencies": {
		"@sveltejs/adapter-node": "^1.0.0-next.56",
		"@sveltejs/adapter-static": "^1.0.0-next.22",
		"@sveltejs/kit": "^1.0.0-next.202",
		"@types/bcrypt": "^5.0.0",
		"@types/js-cookie": "^3.0.1",
		"@types/node-forge": "^0.10.10",
		"@typescript-eslint/eslint-plugin": "^4.31.1",
		"@typescript-eslint/parser": "^4.31.1",
		"autoprefixer": "^10.4.0",
		"eslint": "^7.32.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-svelte3": "^3.2.1",
		"postcss": "^8.3.11",
		"prettier": "^2.4.1",
		"prettier-plugin-svelte": "^2.4.0",
		"prisma": "3.6.0",
		"svelte": "^3.44.2",
		"svelte-check": "^2.2.10",
		"svelte-preprocess": "^4.9.8",
		"tailwindcss": "^3.0.7",
		"ts-node": "^10.4.0",
		"tslib": "^2.3.1",
		"typescript": "^4.5.2"
	},
	"type": "module",
	"dependencies": {
		"@prisma/client": "3.6.0",
		"@sentry/node": "^6.15.0",
		"bcrypt": "^5.0.1",
		"bullmq": "^1.51.1",
		"compare-versions": "^4.1.1",
		"cuid": "^2.1.8",
		"dayjs": "^1.10.7",
		"dockerode": "^3.3.1",
		"dotenv-extended": "^2.9.0",
		"got": "^11.8.2",
		"js-cookie": "^3.0.1",
		"jsonwebtoken": "^8.5.1",
		"node-forge": "^0.10.0",
		"svelte-kit-cookie-session": "^1.3.3",
		"unique-names-generator": "^4.6.0"
	},
	"prisma": {
		"seed": "node prisma/seed.cjs"
	}
}